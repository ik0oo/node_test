- var links = ['About', 'Chat'];

nav.navbar.navbar-default
    .container-fluid
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='/') Brand

        .collapse.navbar-collapse
            ul.nav.navbar-nav
                each link in links
                    - var cl = active === link.toLowerCase() ? 'active' : '';
                    li(class=cl)
                        a(href='/' + link.toLowerCase())=link

            a(
                href="/login",
                type="button",
                class="btn btn-default navbar-btn navbar-right") Sign in
